<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="FXMLtwobuttons.Controller"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER">
    <children>
        <VBox alignment="CENTER">
            <Button onAction="#handleClickA" text="ButtonA">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Label fx:id="label_a" text="A = 0"/>
        </VBox>
        <VBox alignment="CENTER" >
            <Button onAction="#handleClickB" text="ButtonB">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Label fx:id="label_b" text="B = 0"/>
        </VBox>

    </children>

</HBox>
